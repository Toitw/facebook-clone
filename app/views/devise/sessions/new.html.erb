<!-- app/views/devise/sessions/new.html.erb -->
<div class="log-in">
  <h2 class="log-in-heading">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "log-in-form" }) do |f| %>
    <div class="field">
      <%= f.label :email, class: "field-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-input" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "field-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "field-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "remember-me-checkbox" %>
        <%= f.label :remember_me, class: "remember-me-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "log-in-button" %>
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
  <% end %>

  <div class="links-section">
    <%= render "devise/shared/links" %>
  </div>
</div>
